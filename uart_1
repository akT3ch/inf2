#include <avr/io.h>
#include <avr/interrupt.h>
#include <util/delay.h>
#include "lcd.h"

#define BUFFER 30

char rbuffer[BUFFER];
volatile uint8_t zEin = 0;
volatile uint8_t zAus = 0;

void USART_Transmit(unsigned char data)
{
    while (!(UCSRA & (1 << UDRE)))
        ;
    UDR = data;
}

unsigned char USART_Receive(void)
{
    while (!(UCSRA & (1 << RXC)))
        ;
    return UDR;
}

ISR(USART_RXC_vect){
    zEin++;
    if(zEin == BUFFER)
        zEin = 0;
    if(zEin == zAus)
        USART_Transmit('*');
}

int main(void) //()
{
    lcd_init();
    UCSRA = 0;                // bit gesetzt =0 wenn nicht gesetz
    UCSRB = (1 << RXCIE) | (1 << RXEN) | (1 << TXEN); //TX, RX einschalten

    UCSRC = (1 << URSEL) | (1 << UCSZ1) | (1 << UCSZ0); //Set frame format (8 data, 2 stop bits)
    UBRRH = 0;
    UBRRL = 51;    
    sei();                    
    USART_Transmit('#');                 
    while (1)
    {
        if(zEin != zAus)
        {
            lcd_data(rbuffer[zAus]);
            zAus++;
        }
        if(zAus == BUFFER)
            zAus = 0;
    }
    return 0;
}
